<a href="/products">Tienda</a>
<a href="/api/users/current">Perfil</a>

<h2>Carrito</h2>
<h3>N° {{cartId}}</h3>

<ul>
    {{#if productos.length}}
        <div>
            {{#each productos}}
                <li>Producto: {{this.product.title}} - Cantidad: {{this.quantity}} - Precio unitario: {{this.product.price}}</li>
                <p class="card-text">Subtotal: ${{this.product.totalPrice}}</p>
                <button onclick="deleteProductFromCart('{{this.cartId}}', '{{this.product._id}}')">Eliminar</button>
            {{/each}}
        </div>

        <button onclick="vaciarCarrito('{{cartId}}')" class="btn btn-danger">Vaciar Carrito</button>
        <h3 class="mt-2">Total de la compra: ${{totalPurchase}}</h3>

        <form method="post" action="/api/carts/{{cartId}}/purchase">
            <button type="submit" class="btn btn-success">Finalizar Compra</button>
        </form>
    {{else}}
        <h2>Carrito vacío</h2>
        <a href="/products">Agregar productos al carrito</a>
    {{/if}}
</ul>

<script src="../js/cart.js"></script>
